<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:id="@+id/cero"
        android:layout_width="@dimen/ancho"
        android:layout_height="@dimen/alto"
        android:text="0"
        android:onClick="clNumber"
        android:gravity="center"
        android:textSize="@dimen/tamanioTexto"
        android:layout_alignParentBottom="true"/>
    <TextView
        android:id="@+id/btComma"
        android:layout_width="@dimen/ancho"
        android:layout_height="@dimen/alto"
        android:text=","
        android:onClick="clNumber"
        android:gravity="center"
        android:textSize="@dimen/tamanioTexto"
        android:layout_toEndOf="@id/cero"
        android:layout_alignParentBottom="true"/>
    <TextView
        android:id="@+id/btEqual"
        android:layout_width="@dimen/ancho"
        android:layout_height="@dimen/alto"
        android:text="="
        android:gravity="center"
        android:textSize="@dimen/tamanioTexto"
        android:layout_toEndOf="@id/btComma"
        android:layout_alignParentBottom="true"/>
    <TextView
        android:id="@+id/uno"
        android:layout_width="@dimen/ancho"
        android:layout_height="@dimen/alto"
        android:text="1"
        android:onClick="clNumber"
        android:gravity="center"
        android:textSize="@dimen/tamanioTexto"
        android:layout_above="@id/cero"/>
    <TextView
        android:id="@+id/dos"
        android:layout_width="@dimen/ancho"
        android:layout_height="@dimen/alto"
        android:text="2"
        android:onClick="clNumber"
        android:gravity="center"
        android:textSize="@dimen/tamanioTexto"
        android:layout_above="@id/btComma"
        android:layout_toEndOf="@id/uno"/>
    <TextView
        android:id="@+id/tres"
        android:layout_width="@dimen/ancho"
        android:layout_height="@dimen/alto"
        android:text="3"
        android:onClick="clNumber"
        android:gravity="center"
        android:textSize="@dimen/tamanioTexto"
        android:layout_above="@id/btEqual"
        android:layout_toEndOf="@id/dos"/>
    <TextView
        android:id="@+id/cuatro"
        android:layout_width="@dimen/ancho"
        android:layout_height="@dimen/alto"
        android:text="4"
        android:onClick="clNumber"
        android:gravity="center"
        android:textSize="@dimen/tamanioTexto"
        android:layout_above="@id/uno"/>
    <TextView
        android:id="@+id/cinco"
        android:layout_width="@dimen/ancho"
        android:layout_height="@dimen/alto"
        android:text="5"
        android:onClick="clNumber"
        android:gravity="center"
        android:textSize="@dimen/tamanioTexto"
        android:layout_above="@id/dos"
        android:layout_toEndOf="@id/cuatro"/>
    <TextView
        android:id="@+id/seis"
        android:layout_width="@dimen/ancho"
        android:layout_height="@dimen/alto"
        android:text="6"
        android:onClick="clNumber"
        android:gravity="center"
        android:textSize="@dimen/tamanioTexto"
        android:layout_above="@id/tres"
        android:layout_toEndOf="@id/cinco"/>
    <TextView
        android:id="@+id/siete"
        android:layout_width="@dimen/ancho"
        android:layout_height="@dimen/alto"
        android:text="7"
        android:onClick="clNumber"
        android:gravity="center"
        android:textSize="@dimen/tamanioTexto"
        android:layout_above="@id/cuatro"/>
    <TextView
        android:id="@+id/ocho"
        android:layout_width="@dimen/ancho"
        android:layout_height="@dimen/alto"
        android:text="8"
        android:onClick="clNumber"
        android:gravity="center"
        android:textSize="@dimen/tamanioTexto"
        android:layout_above="@id/cinco"
        android:layout_toEndOf="@id/siete"/>
    <TextView
        android:id="@+id/nueve"
        android:layout_width="@dimen/ancho"
        android:layout_height="@dimen/alto"
        android:text="9"
        android:onClick="clNumber"
        android:gravity="center"
        android:textSize="@dimen/tamanioTexto"
        android:layout_above="@id/seis"
        android:layout_toEndOf="@id/ocho"/>
    <LinearLayout
        android:id="@+id/operadores"
        android:layout_width="@dimen/ancho"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_toEndOf="@id/nueve"
        android:layout_below="@id/tvResult">
        <ImageView
            android:id="@+id/btClear"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/ic_borrar"
            android:padding="25dp"/>
        <TextView
            android:id="@+id/btDivision"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="/"
            android:onClick="clOperation"
            android:textSize="@dimen/tamanioTexto"
            android:gravity="center"/>
        <TextView
            android:id="@+id/btMultiplication"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="X"
            android:onClick="clOperation"
            android:textSize="@dimen/tamanioTexto"
            android:gravity="center"/>
        <TextView
            android:id="@+id/btSubtraction"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="-"
            android:onClick="clOperation"
            android:textSize="@dimen/tamanioTexto"
            android:gravity="center"/>
        <TextView
            android:id="@+id/btAddition"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="+"
            android:onClick="clOperation"
            android:textSize="@dimen/tamanioTexto"
            android:gravity="center"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/teal_200"
        android:layout_toEndOf="@id/operadores"
        android:layout_below="@id/tvResult">
        <ImageView
            android:id="@+id/btArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="0"
        android:textSize="60sp"
        android:gravity="right|center_vertical"
        android:layout_above="@id/nueve"
        android:paddingEnd="25dp"
        tools:ignore="RtlHardcoded,RtlSymmetry" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_mas"
        android:layout_alignParentEnd="true"
        android:layout_margin="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DEG"
        android:textSize="20sp"
        android:layout_margin="20dp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_linea"
        android:layout_above="@id/nueve"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>














